<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="CustomButton" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/primary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:layout_width">170dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@color/dark</item>
    </style>

    <style name="CustomRadioButton" parent="@android:style/Widget.CompoundButton.RadioButton">
        <item name="android:buttonTint">@color/gray</item>
        <item name="android:textColor">@color/primary</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="DialogTheme" parent="android:Theme.Material.Light.NoActionBar">
        <item name="android:windowNoTitle">true</item>
        <item name="android:windowFullscreen">false</item>
        <item name="android:windowIsFloating">false</item>
    </style>
</resources>